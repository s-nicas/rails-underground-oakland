<% @current_event = 0  %>

<% @user_events[@current_event] %>

<%= link_to "Next Event", "/events/#{@user_events[@current_event + 1].id}", class: "next" %>



<script id="event-template" type="text/x-handlebars-template">

  <h1>{{name}}</h1>
  <h3>Date: {{date}}</h3>
  <h3>Time: {{time}}</h3>
  <h3>Cost: {{cost}}</h3>
  <h3>Location: {{location}}</h3>
  <h3>Description: {{description}}</h3>

</script>
