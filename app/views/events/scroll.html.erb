<%@event_index = @user_events.index(@event)%>
<%if @event_index < @user_events.length - 1%>
  <%= link_to "Next Event", "/events/#{@user_events[@event_index + 1].id}", class: "next" %>
<%@event = @user_events[@event_index +1]  %>

<%end%>

<div class="show_next_event">
  <%= render partial: "event_info", locals: {event: @event} %>
</div>

<script id="event-template" type="text/x-handlebars-template">

  <h1>{{name}}</h1>
  <h3>Date: {{date}}</h3>
  <h3>Time: {{time}}</h3>
  <h3>Cost: {{cost}}</h3>
  <h3>Location: {{location}}</h3>
  <h3>Description: {{description}}</h3>
</script>
