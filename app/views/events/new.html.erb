<h1>Create An Event</h1>
<div class="fields_with_errors" >
  <% if @event.errors.any? %>
   <!-- <div id="error_explanation"> -->
     <h2>
      Woops - please fix the following   <%= pluralize(@event.errors.count, "error") %> before proceeding!
     </h2>

     <ul>
     <% @event.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
  <% end %>
</div>

<%=render 'form' %>
