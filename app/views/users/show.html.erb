<div id=profile-title><%=@user.username.titleize%>'s Underground Oakland Profile </div>

<div id=user-info>
  <% if has_events %>
      <h2>You have posted <%=pluralize(@user_events.size, 'event')%> </h2>
    <% else %>
      <h2>You haven't posted any events yet.</h2>
  <% end %>
</div>


<div class="events_display">
  <% @user_events.each do |event| %>
    <p><%= link_to "#{event.name}", event_path(event) %></p>
  <% end %>
</div>

<!--button -->
<button id="sort_events" data-id="<%=@user.id%>">Sort Events</button>

<!--handlebars show event template  -->
<script id="ordered-events-template" type="text/x-handlebars-template">
  <p><a href="/events/{{id}}">{{name}}</a></p>
</script>

<!-- refractor attending events  and pluralize-->
<% if future_rsvps(@user).size > 0 %>
  <h2> You are attending <%= pluralize(@user.attending_events.size, 'event') %> in Oakland </h2>
<% end %>

<% future_rsvps(@user).each do |event| %>
  <p><%= event.name %></p>
  <% event.rsvps.each do |rsvp| %>
    <% if rsvp.user_id == @user.id %>
      <p>Can't make it? <%= button_to 'Cancel RSVP', rsvp_path(rsvp), method: :delete %></p>
    <% end %>
  <% end %>
<% end %>




<h3><%= link_to 'Edit Profile', edit_user_path(@user)%></h3>
